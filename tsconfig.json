{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@loaders/*": ["src/loaders/*"],
      "@tests/*": ["tests/*"]
    },
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "coverage"]
}
